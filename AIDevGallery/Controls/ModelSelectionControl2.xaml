<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="AIDevGallery.Controls.ModelSelectionControl2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AIDevGallery.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AIDevGallery.Models"
    xmlns:tkconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:utils="using:AIDevGallery.Utils"
    xmlns:vm="using:AIDevGallery.ViewModels"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <tkconverters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <tkconverters:DoubleToVisibilityConverter x:Key="ZeroToVisibilityConverter" LessThan="1" />
        <tkconverters:DoubleToVisibilityConverter x:Key="NotZeroToVisibilityConverter" GreaterThan="0" />
    </UserControl.Resources>
    <Grid
        Width="1024"
        Height="560"
        ColumnSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Height="86"
            BorderThickness="0,1,0,0"
            CornerRadius="0"
            Style="{StaticResource CardGridStyle}">
            <Grid
                HorizontalAlignment="Left"
                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                ColumnSpacing="12"
                Style="{StaticResource CardGridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Width="24" Source="/Assets/ModelIcons/Microsoft.svg" />
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Phi 3.5 Mini CPU ACC4" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="3.8B params" />
                </StackPanel>
                <StackPanel
                    Grid.Column="2"
                    Margin="12,0,0,0"
                    Orientation="Horizontal">
                    <Border
                        Padding="4,2,4,2"
                        VerticalAlignment="Center"
                        Background="{ThemeResource TertiaryButtonBackground}"
                        BorderBrush="{ThemeResource TertiaryButtonBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4,0,0,4">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TertiaryButtonForeground}"
                            Text="GPU" />
                    </Border>
                    <Border
                        Padding="4,2,4,2"
                        VerticalAlignment="Center"
                        Background="{ThemeResource AccentTextFillColorTertiaryBrush}"
                        BorderBrush="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        BorderThickness="0,1,1,1"
                        CornerRadius="0,4,4,0">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Text="NPU" />
                    </Border>
                </StackPanel>
            </Grid>
            <Button
                HorizontalAlignment="Right"
                Content="Select model"
                Style="{StaticResource AccentButtonStyle}" />
        </Grid>
        <TextBlock
            Margin="24,24,24,12"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="Select a model" />

        <StackPanel
            Margin="0,28,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="2">
            <FontIcon
                AutomationProperties.AccessibilityView="Raw"
                FontSize="14"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Glyph="&#xE71C;" />
            <ComboBox
                SelectedIndex="0"
                SelectedValuePath="Tag"
                Style="{StaticResource SubtleComboBoxStyle}">
                <ComboBoxItem>CPU</ComboBoxItem>
                <ComboBoxItem>NPU</ComboBoxItem>
                <ComboBoxItem>GPU</ComboBoxItem>
            </ComboBox>
            <Button
                Margin="12,0,12,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Add" />
                    <TextBlock Text="Add model" />
                </StackPanel>
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Search on HuggingFace" />
                        <MenuFlyoutItem Text="Add OpenAI" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
        <Grid
            Grid.Row="1"
            Margin="8"
            Padding="0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            ColumnSpacing="48"
            CornerRadius="8"
            Style="{StaticResource CardGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ItemsView
                x:Name="ModelSelectionItemsView"
                Grid.Row="1"
                Margin="12"
                IsItemInvokedEnabled="True"
                ItemInvoked="ModelSelectionItemsView_ItemInvoked"
                ItemsSource="{x:Bind AvailableModels, Mode=OneWay}"
                SelectionMode="Single">
                <ItemsView.Layout>
                    <UniformGridLayout
                        ItemsStretch="Fill"
                        MinColumnSpacing="8"
                        MinItemWidth="168"
                        MinRowSpacing="8" />
                </ItemsView.Layout>
                <ItemsView.ItemTemplate>
                    <DataTemplate x:DataType="vm:AvailableModel">
                        <ItemContainer
                            CornerRadius="{StaticResource ControlCornerRadius}"
                            GotFocus="ItemContainer_GotFocus"
                            PointerEntered="ItemContainer_PointerEntered"
                            Tag="{x:Bind}">
                            <!--<ItemContainer.Resources>
                                    <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
                                    <SolidColorBrush x:Key="ItemContainerSelectedPointerOverBackground" Color="Transparent" />
                                    <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />
                                </ItemContainer.Resources>-->
                            <Grid
                                Padding="8"
                                ColumnSpacing="4"
                                Style="{StaticResource CardGridStyle}"
                                ToolTipService.ToolTip="{x:Bind ModelDetails.Name}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Image
                                    Width="20"
                                    HorizontalAlignment="Left"
                                    Source="{x:Bind ModelDetails.Icon}" />
                                <Button
                                    Margin="0,0,-16,0"
                                    HorizontalAlignment="Right"
                                    Content="{ui:FontIcon Glyph=&#xE712;,
                                                          FontSize=16}"
                                    Style="{StaticResource SubtleButtonStyle}">
                                    <Button.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <MenuFlyoutItem Icon="{ui:FontIcon Glyph=&#xE8A5;}" Text="View model card" />
                                            <MenuFlyoutItem Icon="{ui:FontIcon Glyph=&#xE82D;}" Text="View license" />
                                            <MenuFlyoutItem Icon="{ui:FontIcon Glyph=&#xE8C8;}" Text="Copy as path" />
                                            <MenuFlyoutItem Icon="{ui:FontIcon Glyph=&#xE838;}" Text="Open containing folder" />
                                            <MenuFlyoutSeparator />
                                            <MenuFlyoutItem Icon="{ui:FontIcon Glyph=&#xE74D;}" Text="Delete" />
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                                <StackPanel
                                    Grid.Row="1"
                                    Orientation="Horizontal"
                                    Spacing="12">
                                    <TextBlock
                                        MaxWidth="260"
                                        Margin="0,8,0,6"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="{x:Bind ModelDetails.Name}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />
                                    <StackPanel
                                        Grid.Row="2"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <ItemsRepeater
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            ItemsSource="{x:Bind ModelDetails.HardwareAccelerators}">
                                            <ItemsRepeater.Layout>
                                                <StackLayout Orientation="Horizontal" Spacing="4" />
                                            </ItemsRepeater.Layout>
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate x:DataType="models:HardwareAccelerator">
                                                    <Button
                                                        VerticalAlignment="Center"
                                                        AutomationProperties.Name="More info"
                                                        Content="{x:Bind utils:AppUtils.GetHardwareAcceleratorString((models:HardwareAccelerator))}"
                                                        Style="{StaticResource TertiaryButtonStyle}"
                                                        ToolTipService.ToolTip="More info">
                                                        <Button.Flyout>
                                                            <Flyout ShouldConstrainToRootBounds="False">
                                                                <TextBlock Text="{x:Bind utils:AppUtils.GetHardwareAcceleratorDescription((models:HardwareAccelerator))}" TextWrapping="Wrap" />
                                                            </Flyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                        <TextBlock VerticalAlignment="Center">
                                            <Run
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{x:Bind ModelDetails.ParameterSize}" />
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>


                            </Grid>
                        </ItemContainer>
                    </DataTemplate>
                </ItemsView.ItemTemplate>
            </ItemsView>
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Width="320"
                Padding="0"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0"
                CornerRadius="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="16"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="Available models" />

                    <ScrollViewer Grid.Row="1">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <ItemsRepeater IsTabStop="False" ItemsSource="{x:Bind DownloadableModels, Mode=OneWay}">
                                <ItemsRepeater.Layout>
                                    <StackLayout Spacing="0" />
                                </ItemsRepeater.Layout>
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="vm:DownloadableModel">
                                        <toolkit:SettingsCard
                                            MinHeight="48"
                                            Padding="8,0,8,0"
                                            Background="Transparent"
                                            BorderThickness="0,1,0,1"
                                            CornerRadius="0"
                                            GotFocus="ItemContainer_GotFocus"
                                            PointerEntered="ItemContainer_PointerEntered"
                                            Tag="{x:Bind}">
                                            <toolkit:SettingsCard.Resources>
                                                <Thickness x:Key="SettingsCardHeaderIconMargin">2,0,14,0</Thickness>
                                                <x:Double x:Key="SettingsCardWrapThreshold">286</x:Double>
                                            </toolkit:SettingsCard.Resources>
                                            <toolkit:SettingsCard.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        MaxWidth="268"
                                                        VerticalAlignment="Center"
                                                        Text="{x:Bind ModelDetails.Name}"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTipService.ToolTip="{x:Bind ModelDetails.Name}" />
                                                    <ItemsRepeater
                                                        Grid.Column="1"
                                                        Margin="4,0,0,0"
                                                        ItemsSource="{x:Bind ModelDetails.HardwareAccelerators}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Orientation="Horizontal" Spacing="4" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate x:DataType="models:HardwareAccelerator">
                                                                <Button
                                                                    VerticalAlignment="Center"
                                                                    AutomationProperties.Name="More info"
                                                                    Content="{x:Bind utils:AppUtils.GetHardwareAcceleratorString((models:HardwareAccelerator))}"
                                                                    Style="{StaticResource TertiaryButtonStyle}"
                                                                    ToolTipService.ToolTip="More info">
                                                                    <Button.Flyout>
                                                                        <Flyout ShouldConstrainToRootBounds="False">
                                                                            <TextBlock
                                                                                MaxWidth="360"
                                                                                Text="{x:Bind utils:AppUtils.GetHardwareAcceleratorDescription((models:HardwareAccelerator))}"
                                                                                TextWrapping="Wrap" />
                                                                        </Flyout>
                                                                    </Button.Flyout>
                                                                </Button>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </Grid>
                                            </toolkit:SettingsCard.Header>
                                            <toolkit:SettingsCard.HeaderIcon>
                                                <ImageIcon
                                                    AutomationProperties.AccessibilityView="Control"
                                                    AutomationProperties.Name="Model source icon"
                                                    Source="{x:Bind ModelDetails.Icon}" />
                                            </toolkit:SettingsCard.HeaderIcon>
                                            <toolkit:SettingsCard.Description>
                                                <StackPanel>
                                                    <toolkit:WrapPanel
                                                        HorizontalSpacing="4"
                                                        Orientation="Horizontal"
                                                        VerticalSpacing="2">
                                                        <TextBlock Visibility="{x:Bind ModelDetails.ParameterSize, Converter={StaticResource StringVisibilityConverter}}">
                                                            <Run Text="{x:Bind ModelDetails.ParameterSize}" />
                                                            <Run Text="params" />
                                                            <Run Text=" • " />
                                                        </TextBlock>
                                                        <TextBlock>
                                                            <Run Text="{x:Bind utils:AppUtils.FileSizeToString(ModelDetails.Size)}" />
                                                        </TextBlock>

                                                    </toolkit:WrapPanel>
                                                </StackPanel>
                                            </toolkit:SettingsCard.Description>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Border
                                                    Width="28"
                                                    Height="28"
                                                    Margin="0,0,1,0"
                                                    Padding="0">
                                                    <Button
                                                        Width="28"
                                                        Height="28"
                                                        Padding="0"
                                                        ui:FrameworkElementExtensions.AncestorType="toolkit:SettingsCard"
                                                        AutomationProperties.Name="More options"
                                                        Content="{ui:FontIcon Glyph=&#xE712;,
                                                                              FontSize=16}"
                                                        Style="{StaticResource SubtleButtonStyle}"
                                                        ToolTipService.ToolTip="More options"
                                                        Visibility="{x:Bind OptionsVisible, Mode=OneWay}">
                                                        <Button.Flyout>
                                                            <MenuFlyout Placement="Bottom">
                                                                <MenuFlyoutItem
                                                                    Click="ModelCard_Click"
                                                                    Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                                    Tag="{x:Bind ModelDetails}"
                                                                    Text="View model card" />
                                                                <MenuFlyoutItem
                                                                    Click="ViewLicense_Click"
                                                                    Icon="{ui:FontIcon Glyph=&#xE82D;}"
                                                                    Tag="{x:Bind ModelDetails}"
                                                                    Text="View model license" />
                                                            </MenuFlyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </Border>
                                                <Grid>
                                                    <Button
                                                        Width="28"
                                                        Height="28"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        AutomationProperties.HelpText="Download model"
                                                        AutomationProperties.Name="{x:Bind ModelDetails.Name}"
                                                        Click="DownloadModelButton_Click"
                                                        Content="{ui:FontIcon Glyph=&#xE896;,
                                                                              FontSize=14}"
                                                        HighContrastAdjustment="None"
                                                        IsEnabled="{x:Bind IsDownloadEnabled}"
                                                        Style="{StaticResource SubtleButtonStyle}"
                                                        Tag="{x:Bind}"
                                                        ToolTipService.ToolTip="Download model"
                                                        Visibility="{x:Bind CanDownload, Mode=OneWay}" />

                                                    <ProgressRing
                                                        Width="24"
                                                        Height="24"
                                                        Background="{ThemeResource ControlStrongStrokeColorDisabledBrush}"
                                                        IsIndeterminate="False"
                                                        Visibility="{x:Bind vm:DownloadableModel.BoolToVisibilityInverse(CanDownload), Mode=OneWay}"
                                                        Value="{x:Bind Progress, Mode=OneWay}" />
                                                </Grid>
                                            </StackPanel>
                                        </toolkit:SettingsCard>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>

                            <ItemsRepeater ItemsSource="{x:Bind UnavailableModels, Mode=OneWay}" Visibility="Collapsed">
                                <ItemsRepeater.Layout>
                                    <StackLayout Spacing="4" />
                                </ItemsRepeater.Layout>
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="vm:BaseModel">
                                        <toolkit:SettingsCard
                                            MinHeight="48"
                                            Padding="12,8,12,8"
                                            Background="{ThemeResource ControlFillColorDisabledBrush}"
                                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                            CornerRadius="{StaticResource OverlayCornerRadius}"
                                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                            GotFocus="ItemContainer_GotFocus"
                                            PointerEntered="ItemContainer_PointerEntered"
                                            Tag="{x:Bind}">
                                            <toolkit:SettingsCard.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        MaxWidth="268"
                                                        VerticalAlignment="Center"
                                                        Text="{x:Bind ModelDetails.Name}"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTipService.ToolTip="{x:Bind ModelDetails.Name}" />
                                                    <ItemsRepeater
                                                        Grid.Column="1"
                                                        Margin="4,0,0,0"
                                                        VerticalAlignment="Center"
                                                        ItemsSource="{x:Bind ModelDetails.HardwareAccelerators}"
                                                        Opacity="0.6">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Orientation="Horizontal" Spacing="4" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate x:DataType="models:HardwareAccelerator">
                                                                <Button
                                                                    VerticalAlignment="Center"
                                                                    AutomationProperties.Name="More info"
                                                                    Content="{x:Bind utils:AppUtils.GetHardwareAcceleratorString((models:HardwareAccelerator))}"
                                                                    Style="{StaticResource TertiaryButtonStyle}"
                                                                    ToolTipService.ToolTip="More info">
                                                                    <Button.Flyout>
                                                                        <Flyout ShouldConstrainToRootBounds="False">
                                                                            <TextBlock
                                                                                MaxWidth="360"
                                                                                Text="{x:Bind utils:AppUtils.GetHardwareAcceleratorDescription((models:HardwareAccelerator))}"
                                                                                TextWrapping="Wrap" />
                                                                        </Flyout>
                                                                    </Button.Flyout>
                                                                </Button>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </Grid>
                                            </toolkit:SettingsCard.Header>
                                            <toolkit:SettingsCard.Resources>
                                                <Thickness x:Key="SettingsCardHeaderIconMargin">2,0,12,0</Thickness>
                                                <x:Double x:Key="SettingsCardWrapThreshold">286</x:Double>
                                            </toolkit:SettingsCard.Resources>
                                            <toolkit:SettingsCard.HeaderIcon>
                                                <ImageIcon
                                                    AutomationProperties.AccessibilityView="Control"
                                                    AutomationProperties.Name="Model source icon"
                                                    Opacity="0.4"
                                                    Source="{x:Bind ModelDetails.Icon}" />
                                            </toolkit:SettingsCard.HeaderIcon>
                                            <toolkit:SettingsCard.Description>
                                                <StackPanel>
                                                    <toolkit:WrapPanel
                                                        HorizontalSpacing="6"
                                                        Orientation="Horizontal"
                                                        VerticalSpacing="2"
                                                        Visibility="{x:Bind ModelDetails.Size, Converter={StaticResource NotZeroToVisibilityConverter}}">
                                                        <TextBlock
                                                            MaxWidth="268"
                                                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                            TextTrimming="CharacterEllipsis"
                                                            Visibility="{x:Bind ModelDetails.ParameterSize, Converter={StaticResource StringVisibilityConverter}}">
                                                            <Run Text="{x:Bind ModelDetails.ParameterSize}" />
                                                            <Run Text="params" />
                                                            <Run Text=" • " />
                                                        </TextBlock>
                                                        <TextBlock Foreground="{ThemeResource TextFillColorDisabledBrush}">
                                                            <Run Text="{x:Bind utils:AppUtils.FileSizeToString(ModelDetails.Size)}" />
                                                            <Run Text=" • " />
                                                        </TextBlock>
                                                        <Image
                                                            Height="12"
                                                            Margin="0,2,0,0"
                                                            Opacity="0.6"
                                                            Source="{x:Bind utils:AppUtils.GetModelSourceImageFromUrl(ModelDetails.Url)}">
                                                            <ToolTipService.ToolTip>
                                                                <TextBlock TextWrapping="Wrap">
                                                                    <Run Text="This model is from" />
                                                                    <Run Text="{x:Bind utils:AppUtils.GetModelSourceNameFromUrl(ModelDetails.Url)}" />
                                                                </TextBlock>
                                                            </ToolTipService.ToolTip>
                                                        </Image>
                                                        <TextBlock Text="• " />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                            Text="{x:Bind utils:AppUtils.GetLicenseShortNameFromString(ModelDetails.License)}">
                                                            <ToolTipService.ToolTip>
                                                                <TextBlock TextWrapping="Wrap">
                                                                    <Run Text="This model is under the" />
                                                                    <Run Text="{x:Bind utils:AppUtils.GetLicenseTitleFromString(ModelDetails.License)}" />
                                                                    <Run Text="license" />
                                                                </TextBlock>
                                                            </ToolTipService.ToolTip>
                                                        </TextBlock>
                                                    </toolkit:WrapPanel>
                                                    <TextBlock
                                                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                        Text="Windows Copilot Runtime APIs"
                                                        Visibility="{x:Bind ModelDetails.Size, Converter={StaticResource ZeroToVisibilityConverter}}" />
                                                </StackPanel>
                                            </toolkit:SettingsCard.Description>

                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Border
                                                    Width="28"
                                                    Height="28"
                                                    Margin="0,0,1,0"
                                                    Padding="0">
                                                    <Button
                                                        Width="28"
                                                        Height="28"
                                                        Padding="0"
                                                        ui:FrameworkElementExtensions.AncestorType="toolkit:SettingsCard"
                                                        AutomationProperties.Name="More options"
                                                        Content="{ui:FontIcon Glyph=&#xE712;,
                                                                              FontSize=16}"
                                                        Style="{StaticResource SubtleButtonStyle}"
                                                        ToolTipService.ToolTip="More options"
                                                        Visibility="{x:Bind OptionsVisible, Mode=OneWay}">
                                                        <Button.Flyout>
                                                            <MenuFlyout Placement="Bottom">
                                                                <MenuFlyoutItem
                                                                    Click="ModelCard_Click"
                                                                    Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                                    Tag="{x:Bind ModelDetails}"
                                                                    Text="View model card"
                                                                    Visibility="{x:Bind ModelDetails.Size, Converter={StaticResource NotZeroToVisibilityConverter}}" />
                                                                <MenuFlyoutItem
                                                                    Click="ApiDocumentation_Click"
                                                                    Icon="{ui:FontIcon Glyph=&#xE8A5;}"
                                                                    Tag="{x:Bind ModelDetails}"
                                                                    Text="View API documentation"
                                                                    Visibility="{x:Bind ModelDetails.Size, Converter={StaticResource ZeroToVisibilityConverter}}" />
                                                                <MenuFlyoutItem
                                                                    Click="ViewLicense_Click"
                                                                    Icon="{ui:FontIcon Glyph=&#xE82D;}"
                                                                    Tag="{x:Bind ModelDetails}"
                                                                    Text="View license"
                                                                    Visibility="{x:Bind ModelDetails.Size, Converter={StaticResource NotZeroToVisibilityConverter}}" />
                                                            </MenuFlyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </Border>
                                                <Button
                                                    Margin="0,0,2,0"
                                                    Padding="2"
                                                    AutomationProperties.Name="Warning"
                                                    Style="{StaticResource SubtleButtonStyle}"
                                                    ToolTipService.ToolTip="Warning">
                                                    <Button.Flyout>
                                                        <Flyout ShouldConstrainToRootBounds="False">
                                                            <TextBlock
                                                                Width="368"
                                                                Text="{x:Bind Compatibility.CompatibilityIssueDescription}"
                                                                TextWrapping="WrapWholeWords" />
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <FontIcon
                                                        AutomationProperties.AccessibilityView="Raw"
                                                        FontSize="16"
                                                        Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                        Glyph="&#xE7BA;" />
                                                </Button>
                                            </StackPanel>
                                        </toolkit:SettingsCard>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

        </Grid>
        <ContentDialog
            x:Name="DownloadDialog"
            Title="Download model"
            DefaultButton="Primary"
            IsPrimaryButtonEnabled="{Binding ElementName=AgreeCheckBox, Path=IsChecked}"
            PrimaryButtonText="Download"
            SecondaryButtonText="Cancel">
            <ContentDialog.Content>
                <StackPanel MinWidth="360">
                    <InfoBar
                        x:Name="WarningInfoBar"
                        Title="Model is not recommended"
                        Margin="0,0,0,16"
                        IsClosable="False"
                        IsOpen="False"
                        Severity="Warning" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="You are about to download" />
                        <Run x:Name="ModelNameTxt" FontWeight="SemiBold" />
                        <Run Text="from" />
                        <Run x:Name="ModelSourceTxt" FontWeight="SemiBold" />
                        <LineBreak />
                        <LineBreak /><Run Text="License:" />
                        <Hyperlink x:Name="ModelLicenseLink">
                            <Run x:Name="ModelLicenseLabel" />
                        </Hyperlink>
                    </TextBlock>
                    <CheckBox
                        x:Name="AgreeCheckBox"
                        Margin="0,16,0,0"
                        Content="I have reviewed and agree with the license" />
