<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage
    xmlns:samples="using:AIDevGallery.Samples"
    x:Class="AIDevGallery.Samples.OpenSourceModels.SentenceEmbeddings.Embeddings.SemanticSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AIDevGallery.Samples.OpenSourceModels.SentenceEmbeddings.Embeddings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="using:AIDevGallery.Samples.SharedCode"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Spacing="8">
            <TextBox
                x:Name="SourceTextBox"
                TextChanged="SemanticTextBox_TextChanged"
                AcceptsReturn="True"
                Height="240"
                PlaceholderText="Paste in a block of text to search..."
                TextWrapping="Wrap" />
            <TextBox
                x:Name="SearchTextBox"
                AutomationProperties.Name="Prompt input"
                PlaceholderText="Enter a word or phrase to search for"
                TextChanged="SemanticTextBox_TextChanged"
                KeyUp="TextBox_KeyUp"
                TextWrapping="Wrap" />
            <ProgressBar
                x:Name="OutputProgressBar"
                VerticalAlignment="Bottom"
                IsIndeterminate="True"
                Visibility="Collapsed" />
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <InfoBar
                    x:Name="ErrorMessage"
                    IsOpen="False"
                    Severity="Warning"
                    Title="Error"
                    Message="Content is required in both of the above boxes to execute a search." 
                    Padding="0"/>
                <Button
                    x:Name="SearchButton"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Click="SearchButton_Click"
                    Content="Search"
                    Margin="10,0,0,0"
                    IsEnabled="False"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>
        </StackPanel>
        <Grid
            x:Name="ResultsGrid"
            Grid.Row="2"
            Visibility="Collapsed">
            <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}">Search Results:</TextBlock>
            <ScrollViewer
                Margin="0,25,0,0"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Visible">
                <TextBlock
                    x:Name="ResultsTextBlock"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True"
                    TextWrapping="WrapWholeWords" />
            </ScrollViewer>
        </Grid>
    </Grid>
</samples:BaseSamplePage>
