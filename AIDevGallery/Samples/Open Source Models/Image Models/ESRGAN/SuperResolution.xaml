<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage
    x:Class="AIDevGallery.Samples.OpenSourceModels.ESRGAN.SuperResolution"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AIDevGallery.Samples.OpenSourceModels.ESRGAN"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:samples="using:AIDevGallery.Samples"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Before Image Section  -->
            <StackPanel
                x:Name="OriginalPanel"
                Spacing="8"
                Visibility="Collapsed">
                <TextBlock
                    x:Name="TestLabel"
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Original" />
                <ScrollViewer
                    HorizontalAlignment="Center"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Auto"
                    MaxZoomFactor="4"
                    MinZoomFactor="1"
                    VerticalScrollBarVisibility="Auto"
                    VerticalScrollMode="Auto"
                    ZoomMode="Enabled">
                    <Viewbox
                        MaxWidth="400"
                        MaxHeight="500"
                        HorizontalAlignment="Center"
                        Stretch="Uniform"
                        StretchDirection="Both">
                        <Image x:Name="DefaultImage" />
                    </Viewbox>
                </ScrollViewer>
                <TextBlock
                    x:Name="DefaultImageDimensions"
                    HorizontalAlignment="Center"
                    AutomationProperties.Name="DefaultImageDimensions" />
            </StackPanel>

            <!--  After Image Section  -->
            <StackPanel
                x:Name="UpscaledPanel"
                Grid.Column="1"
                Spacing="8"
                Visibility="Collapsed">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Upscaled" />
                <ScrollViewer
                    HorizontalAlignment="Center"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Auto"
                    MaxZoomFactor="4"
                    MinZoomFactor="1"
                    VerticalScrollBarVisibility="Auto"
                    VerticalScrollMode="Auto"
                    ZoomMode="Enabled">
                    <Viewbox
                        HorizontalAlignment="Center"
                        Stretch="Uniform"
                        StretchDirection="Both">
                        <Image
                            x:Name="ScaledImage"
                            MaxWidth="400"
                            MaxHeight="500" />
                    </Viewbox>
                </ScrollViewer>
                <TextBlock
                    x:Name="ScaledImageDimensions"
                    HorizontalAlignment="Center"
                    AutomationProperties.Name="ScaledImageDimensions" />
            </StackPanel>

            <ProgressRing
                x:Name="Loader"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                IsActive="false"
                Visibility="Collapsed" />

            <!--  Upload Button  -->
            <Button
                x:Name="UploadButton"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                Click="UploadButton_Click"
                Content="Select image"
                Style="{StaticResource AccentButtonStyle}" />
        </Grid>
    </ScrollViewer>
</samples:BaseSamplePage>
